<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/fondo_hd">

    <TextView android:id="@+id/puntosText"
        android:text="@string/puntos_initial_text" android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <WebView android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button android:id="@+id/btnVerAnuncio"
        android:text="@string/ver_anuncio_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/btnRuleta"
        android:text="@string/ir_a_ruleta_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
